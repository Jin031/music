<div class="main">
  <div class="row">
   <div class="mx-auto" style="max-width: 480px">
    <h3 class= "my-5">新規会員登録</h3>
     <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
     <%= render "public/shared/error_messages", resource: resource %>

    <div class='form-group row'>
     <%= f.label :profile_image, "プロフィール画像", class: "col-4" %>
     <%= f.file_field :profile_image, accept: "image/*", class: "col-8" %>
     <div class="col-4"></div>
     <div class="col-8" id='new-image'></div>
    </div>

    <div class='form-group row'>
     <%= f.label :image, "ニックネーム", class: "col-4" %>
     <%= f.text_field :name, class: "col-5" %>
    </div>

    <div class='form-group row'>
     <%= f.label :introduction, "自己紹介（任意）", class: "col-4" %>
     <%= f.text_area :introduction, :size=>"50x5", class: "col-5" %>
    </div>

    <div class='form-group row'>
     <%= f.label :email, "メールアドレス", class: "col-4" %>
     <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-5" %>
    </div>

    <div class='form-group row'>
     <%= f.label :email, "パスワード", class: "col-4" %>
     <%= f.password_field :password, autocomplete: "new-password", class: "col-5" %>
    </div>

    <div class='form-group row'>
     <%= f.label :password_confirmation, "パスワード再入力", class: "col-4" %>
     <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-5" %>
    </div>

    <div class="row">
     <div class="col-md-3 my-1"></div>
     <div class="col-md-3 my-3">
      <%= f.submit "新規登録",class:"btn btn-success" %>
     </div>
    </div>
     <% end %>
 　 </div>
  </div>
 </div>


