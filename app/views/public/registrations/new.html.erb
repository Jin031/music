<div class="container">
 <div class="row">
  <div class="col-md-12">
   <h4 class= "mt-3 mb-5">新規会員登録</h4>

   <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
   <%= render "public/shared/error_messages", resource: resource %>

   <div class='form-group row'>
    <%= f.label :image, "プロフィール画像", class: "col-4" %>
    <%= f.file_field :image, accept: "image/*", class: "col-8" %>
   </div>
   <div class="row">
    <div class="col-md-2">
     ニックネーム
    </div>
    <div class="col-md-3">
      <%= f.text_field :name %>
    </div>
   </div>
   <div class="row">
    <div class="col-md-2">
     自己紹介
    </div>
    <div class="col-md-3">
      <%= f.text_area :introduction %>
    </div>
   </div>

   <div class="row">
    <div class="col-md-3 my-1">
     メールアドレス
    </div>
    <div class="col-md-3 my-1">
     <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
   </div>

   <div class="row">
    <div class="col-md-3 my-1">
     パスワード
    </div>
    <div class="col-md-3 my-1">
    <% if @minimum_password_length %>
     <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
   </div>
   <div class="row">
    <div class="col-md-3 my-1">
     パスワード再入力
    </div>
    <div class="col-md-3 my-1">
     <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
   </div>

    <div class="row">
     <div class="col-md-3 my-1"></div>
     <div class="col-md-3 my-1">
        <%= f.submit "新規登録",class:"btn btn-success" %>
     </div>
    </div>

     <% end %>
    <h5>既に登録済みの方</h5>
    <%= render "public/shared/links" %>
    からログインしてください
  </div>
 </div>
</div>

