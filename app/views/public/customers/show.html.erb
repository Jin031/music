<div class="container">
 <div class="row">
  <div class="mx-auto">
   <h4 class= "my-5">マイプロフィール</h4>

     <% if @customer == current_customer %>
      <%= link_to "編集する", edit_customer_path, class:"btn btn-sm btn-success" %>
      <%= link_to "いいね一覧", post_favorites_path(@customer), class:"btn btn-sm btn-success" %>
      <%= link_to "通知一覧",  notifications_path ,class:"btn btn-sm btn-success" %>
     <% end %>
      <%= link_to '投稿をみる',  posts_customer_path, class:"btn btn-sm btn-success" %>

    <table class="table table-borderless mt-3">
     <thead></thead>
      <tbody>
       <tr>
        <th>プロフィール画像</th>
        <td>
         <%= image_tag @customer.get_profile_image(100, 100) %>
        </td>
       </tr>
       <tr>
        <th>
         <%= link_to "フォロー中", customer_followings_path(@customer.id) %>
         <%= @customer.followings.count %>
        </th>
        <td>
         <%= link_to "フォロワー", customer_followers_path(@customer.id) %>
         <%= @customer.followers.count %>
        </td>
       </tr>
       <tr>
        <th>会員ID</th>
        <td>
         <%= @customer.id %>
        </td>
       </tr>
       <tr>
        <th>ニックネーム</th>
        <td>
         <%= @customer.name %>
        </td>
       </tr>
       <tr>
        <th>自己紹介</th>
        <td>
         <%= @customer.introduction %>
        </td>
       </tr>
       <tr>
        <th>メールアドレス</th>
        <td>
         <%= @customer.email %>
        </td>
       </tr>
      </tbody>
     </table>
   </div>
  </div>
 </div>