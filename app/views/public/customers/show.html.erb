<div class="container">
 <div class="row">
  <div class="mx-auto">
   <h4 class= "my-5">マイプロフィール</h4>

      <%= link_to "編集する", edit_customers_path,class:"btn btn-sm btn-success" %>
      <%= link_to "いいね一覧", favorites_path,class:"btn btn-sm btn-success" %>
      <%= link_to "投稿一覧", posts_path,class:"btn btn-sm btn-success" %>

    <table class="table table-borderless mt-3">
     <thead></thead>
      <tbody>
       <tr>
        <th>プロフィール画像</th>
        <td>
         <%= image_tag @customer.get_profile_image(100, 100) %>
        </td>
       </tr>
       <tr>
        <th>会員ID</th>
        <td>
         <%= @customer.id %>
        </td>
       </tr>
       <tr>
        <th>ニックネーム</th>
        <td>
         <%= @customer.name %>
        </td>
       </tr>
       <tr>
        <th>自己紹介</th>
        <td>
         <%= @customer.introduction %>
        </td>
       </tr>
       <tr>
        <th>メールアドレス</th>
        <td>
         <%= @customer.email %>
        </td>
       </tr>
      </tbody>
     </table>
   </div>
  </div>
 </div>