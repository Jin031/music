<div class="main">
 <div class="row justify-content-center">
  <div class="col-6">
   <h3 class="my-5 text-center">いいね一覧</h3>
   <div class="row justify-content-between">
    <% if @favorites.exists? %>

    <table class="table table-hover">
     <tbody>
      <% @favorites.each do |favorite| %>
       <tr>
        <td>
         <div style="display:grid;place-items:center;">
          <%= link_to customer_path(favorite.customer.id) do %>
          <%= image_tag favorite.post.customer.get_profile_image(100,100) %>
          <% end %>
         </div>
        </td>
        <td class="p-4">
         <p class="mb-3" style="font-size:0.86em;font-weight:800;">
          <%= favorite.post.customer.name %>
         </p>
         <p>
          <%= link_to post_path(favorite.post.id) do %>
          <%= favorite.post.title %>
          <% end %>
         </p>
         <p>
          <%= link_to posts_path(genre_id: favorite.post.genre_id) do %>
          <%= favorite.post.genre.name %>
          <% end %>
          </p>
       </td>
      </tr>
     <% end %>
     </tbody>
    </table>
     <%= paginate @favorites %>
    <% else %>
    <div class="d-flex align-items-center justify-content-center" style="height:100px;"></div>
    <p class="text-center">ユーザーはいません</p>
    <% end %>
   </div>
  </div>
 </div>
</div>


