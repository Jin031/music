<div class="container">
 <div class="row">
  <div class="mx-auto">
   <h4 class= "mt-3 mb-5">新規投稿</h4>
    <%= form_with model: @post, url: posts_path, method: :post do |f| %>
      <%= render 'layouts/error_messages', f: f %>
    <div class='form-group row'>
     <%= f.label :images, "画像", class: "col-4" %>
     <%= f.file_field :images, multiple: true, accept: "image/*", class: "col-8" %>
    </div>
    <div class='form-group row'>
     <%= f.label :title, "タイトル", class: "col-4" %>
     <%= f.text_field :title, class: "col-8" %>
    </div>
    <div class='form-group row'>
     <%= f.label :genre_id, "ジャンル", class: "col-4" %>
     <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name), { include_blank: "選択してください" }, class: "col-8" %>
    </div>
    <div class='form-group row'>
     <%= f.label :text, "本文", class: "col-4" %>
     <%= f.text_area :text, :size=>"50x10", class: "col-8" %>
    </div>
    <div class="text-center">
     <%= f.submit '新規投稿',class:"btn btn-success" %>
    </div>
    <% end %>
  </div>
 </div>
</div>