<div class="main">
  <div class="container">
    <h3 class= "mt-3 mb-5 text-center">新規投稿</h3>
      <%= form_with model: @post, url: posts_path, method: :post do |f| %>
      <%= render 'layouts/error_messages', f: f %>
    <div class='form-group'>
      <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-4 offset-md-1 col-lg-3">
          <%= f.label :images, "画像（最大４枚）" %>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-4">
          <%= f.file_field :images, multiple: true, accept: "image/*" %>
        </div>
          <div class="col-4"></div>
          <div class="col-8" id='new-image'></div>
      </div>
    </div>
    <div class='form-group'>
      <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-4 offset-md-1 col-lg-3">
          <%= f.label :title, "タイトル" %>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-4">
          <%= f.text_field :title, class:"w-100" %>
        </div>
      </div>
    </div>
    <div class='form-group'>
      <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-4 offset-md-1 col-lg-3">
          <%= f.label :genre_id, "ジャンル" %>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-4">
          <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name), { include_blank: "選択してください" }, class: "w-100" %>
        </div>
      </div>
    </div>
    <div class='form-group'>
      <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-4 offset-md-1 col-lg-3">
          <%= f.label :text, "本文" %>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-4">
          <%= f.text_area :text, :size=>"50x10", class:"w-100" %>
        </div>
      </div>
    </div>
    <div class="text-center">
      <%= f.submit '新規投稿',class:"btn btn-success" %>
    </div>
      <% end %>
  </div>
</div>