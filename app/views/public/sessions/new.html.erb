<div class="container">
 <div class="row">
  <div class="mx-auto">
   <h4 class= "mt-3 mb-5">会員ログイン</h4>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class='form-group row'>
      <%= f.label :email, "メールアドレス" %>
     <div class="field">
       <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "ml-3" %>
     </div>
    </div>
    <div class='form-group row'>
      <%= f.label :password, "パスワード" %>
     <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", class: "ml-5" %>
     </div>
    </div>
     <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "パスワードを保存する"  %>
    </div>
     <% end %>
    <div class="actions text-center mt-4">
     <%= f.submit "ログイン",class:"btn btn-primary" %>
    </div>
    <% end %>
    <div class="actions text-center mt-4">
    <%= link_to 'ゲストログイン', customers_guest_sign_in_path, method: :post ,class:"btn btn-success" %>
    </div>

    <p class= "mt-5">会員登録がお済でない方</p>
    <%= render "public/shared/links" %>
   から新規登録を行ってください。
  </div>
 </div>
</div>