<div class="main">
  <div class="row">
    <div class="mx-auto">
      <h3 class= "my-5">会員ログイン</h3>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class='form-group row'>
        <%= f.label :email, "メールアドレス" %>
        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "ml-3" %>
        </div>
      </div>
      <div class='form-group row'>
        <%= f.label :password, "パスワード" %>
        <div class="field">
          <%= f.password_field :password, autocomplete: "current-password", class: "ml-5" %>
        </div>
      </div>
      <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "パスワードを保存する"  %>
      </div>
      <% end %>
      <div class="actions text-center mt-4">
        <%= f.submit "ログイン",class:"btn btn-primary" %>
      </div>
        <% end %>
      <div class="actions text-center mt-4">
        <%= link_to 'ゲストログイン', customers_guest_sign_in_path, method: :post ,class:"btn btn-success" %>
      </div>
    </div>
  </div>
</div>
