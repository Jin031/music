<div class="d-flex">
  <div class="mx-auto">
    <h3 class= "mt-3 mb-5">
      <%= @customer.name %>
      さんの会員詳細
    </h3>
    <table class="table table-borderless mt-3">
        <thead></thead>
        <tbody>
          <tr>
            <th>プロフィール画像</th>
            <td>
              <%= image_tag @customer.get_profile_image(100, 100) %>
           </td>
          </tr>
          <tr>
            <th>会員ID</th>
            <td>
              <%= @customer.id %>
            </td>
          </tr>
          <tr>
            <th>ニックネーム</th>
            <td>
              <%= @customer.name %>
            </td>
          </tr>
          <tr>
            <th>自己紹介</th>
            <td>
              <%= simple_format(@customer.introduction) %>
            </td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td>
              <%= @customer.email %>
            </td>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <td>
              <% if @customer.is_deleted == false %>
                有効
              <% elsif @customer.is_deleted == true %>
                退会
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
      <div class="mt-4">
        <div class="col-md-12 row justify-content-around">
          <div>
            <%= link_to '投稿一覧', posts_customer_path, class:"btn btn-sm btn-success" %>
          </div>
          <div>
            <%= link_to "退会させる", unsubscribe_admin_customer_path(@customer.id), method: :patch, "data-confirm" => "本当に削除しますか？", class:"btn btn-sm btn-danger" %>
          </div>
        </div>
      </div>
    </div>
 </div>