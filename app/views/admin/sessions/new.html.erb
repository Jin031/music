<div class="container">
 <div class="row">
  <div class="mx-auto">
    <h4 class= "mt-3 mb-5">管理者ログイン</h4>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
     <div class='form-group row'>
      <%= f.label :email, "メールアドレス" %>
      <div class="field">
       <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "ml-3" %>
      </div>
     </div>

     <div class='form-group row'>
       <%= f.label :password, "パスワード" %>
      <div class="field">
       <%= f.password_field :password, autocomplete: "current-password", class: "ml-5" %>
      </div>
     </div>

  <div class="actions text-center mt-4">
    <%= f.submit "ログイン",class:"btn btn-primary" %>
  </div>
<% end %>

<%= render "admin/shared/links" %>
  </div>
 </div>
</div>